<!DOCTYPE html>
<html ng-app='ttt'>
<head>
	<meta charset=utf-8 />
	<title>ttt-rb</title>
	<link href='/ttt.css' rel='stylesheet'>
	<script src='/angular.min.js'></script>
	<script src='/ttt.js'></script>
</head>
<body ng-controller='TTTCtrl'>
	<div class="scoreboard">
		<h2>Wins: 0</h2>
		<h2>Losses: {{ losses }}</h2>
		<h2>Ties: {{ ties }}</h2>
		<a ng-click="newGame(cells)" href="#">New Game</a>
	</div>
	<h1>Tic Tac Toe</h1>
  <table>
  	<tr ng-repeat='row in rows' id="row-{{ row.id }}">
  		<td ng-repeat='cell in row.cells' ng-class="{ win : cell.win }" id='cell-{{ cell.id }}' ng-click='addValue(cell.id)'>{{ cell.value }}</td>
  	</tr>
  </table>
</body>
</html>
